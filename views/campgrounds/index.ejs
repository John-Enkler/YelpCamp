<%  include ../partials/header %>

<header class="jumbotron">
  <div class="container">

    <h1>Welcom to YelpCamp</h1>
    <p>View our handpicked campgrounds from all over the world.</p>
    <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campgrounds!</a>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3>Our most popular campgrounds</h3>
    </div>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>

      <div class="col-4">
        <div class="card mr-2" style="width: 18rem;">

          <img class="card-img-top" src="<%= campground.image %>">

          <div class="card-body">
            <h4 class="card-title"><%= campground.name %></h4>
          </div>

          <p>
            <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
          </p>

        </div>
      </div>

      <% }); %>
    </div>

  </div>
  <% include ../partials/footer %>
